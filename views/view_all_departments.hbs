<div class="container-fluid">
    {{#if departmentList}}
    <div class="row row-cols-8 justify-content-center">
        <div class="col-8 col-md-5 btn-group-vertical" role="group">
        {{#each departmentList}}
            <a class="mt-3 btn btn-lg btn-block btn-outline-dark" href="/departments/view?key={{ key }}">{{ name }}</a>
        {{/each}}
        {{else}}
            <h3 class="text-danger text-center">No Departments to List</h3>
        {{/if}}
        </div>
    </div>
</div>