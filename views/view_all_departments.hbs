<div class="container-fluid">
    {{#if departmentList}}
    <div class="row row-cols-8 justify-content-center">
        <div class="col-12 col-md-5 btn-group-vertical" role="group">
        {{#each departmentList}}
            <span class="mt-3 btn btn-lg btn-block btn-outline-dark">{{ name }}
                <a href="/departments/destroy?key={{ key }}"><i class="ml-2 float-right text-danger" data-feather="trash"></i></a>
                <a href="/departments/edit?key={{ key }}"><i class="ml-2 float-right text-info" data-feather="edit"></i></a>
                <a href="/departments/view?key={{ key }}"><i class="ml-2 float-right text-secondary" data-feather="eye"></i></a>
            </span>
        {{/each}}
        {{else}}
            <h3 class="text-danger text-center">No Departments to List</h3>
        {{/if}}
        </div>
    </div>
</div>