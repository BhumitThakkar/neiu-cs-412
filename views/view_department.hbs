<div class="container-fluid">
    <div class="form-group row justify-content-center">
        <div class="col-md-2 col-5 text-right font-weight-bold">
            <label class="col-form-label" for="key">Key:</label>
        </div>
        <div class="col-md-10 col-7">
            <label class="col-form-label" for="key">{{ departmentKey }}</label>
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <div class="col-md-2 col-5 text-right font-weight-bold">
            <label class="col-form-label" for="departmentName">Department Name:</label>
        </div>
        <div class="col-md-10 col-7">
            <label class="col-form-label" for="departmentName">{{ departmentName }}</label>
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <div class="col-md-2 col-5 text-right font-weight-bold">
            <label class="col-form-label" for="departmentHead">Department Head:</label>
        </div>
        <div class="col-md-10 col-7">
            <label class="col-form-label" for="departmentHead">{{ departmentHead }}</label>
        </div>
    </div>
    <hr/>

    <div class="form-group row justify-content-center">
        <a class="col-6 col-md-2" href="/departments/destroy?key={{ departmentKey }}"><span class="btn btn-light">Delete Department</span></a>
        <a class="col-6 col-md-2" href="/departments/edit?key={{ departmentKey }}"><span class="btn btn-light">Edit Department</span></a>
    </div>
</div>
