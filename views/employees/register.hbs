<div class="container-fluid mt-2">
    <div class="row justify-content-center">
        <h2>{{title}}</h2>
    </div>
</div>

<div class="container-fluid m-2">
    {{> flash_messages }}
</div>

<form method="post" action="/employees/register">
    <div class="container-fluid">
        <input type="hidden" name="saveMethod" value="{{#if isCreate }}create{{ else }}update{{/if}}">

        <div class="form-group row justify-content-center">
            <div class="col-md-3 col-5 text-right font-weight-bold">
                <label class="col-form-label" for="first">First Name:</label>
            </div>
            <div class="col-md-4 col-7">
                <input class="form-control" type="text" name="first" required/>
            </div>
        </div>

        <div class="form-group row justify-content-center">
            <div class="col-md-3 col-5 text-right font-weight-bold">
                <label class="col-form-label" for="last">Last Name:</label>
            </div>
            <div class="col-md-4 col-7">
                <input class="form-control" type="text" name="last" required/>
            </div>
        </div>

        <div class="form-group row justify-content-center">
            <div class="col-md-3 col-5 text-right font-weight-bold">
                <label class="col-form-label" for="phNumber">Personal Phone Number:</label>
            </div>
            <div class="col-md-4 col-7">
                <input class="form-control" type="number" name="phNumber" min="1000000000" max="9999999999" required/>
            </div>
        </div>

        <div class="form-group row justify-content-center">
            <div class="col-md-3 col-5 text-right font-weight-bold">
                <label class="col-form-label" for="departmentId">Department:</label>
            </div>
            <div class="col-md-4 col-7">
                <select class="form-control" name="departmentId">
                    {{#if showAddHR}}
                        <option value="keep me as it is">HR</option>
                    {{else if showAddCEO}}
                        <option value="keep me as it is">Executive Board</option>
                    {{else}}
                        {{#each departmentList}}
                            <option value="{{objId}}">{{ name }}</option>
                        {{/each}}
                    {{/if}}
                </select>
            </div>
        </div>

        {{#if showAddHR}}
            <input class="form-control" type="hidden" name="managerPhNumber" value="0123456789" required/>
        {{else if showAddCEO}}
            <input class="form-control" type="hidden" name="managerPhNumber" value="0123456789" required/>
        {{else}}
            <div class="form-group row justify-content-center">
                <div class="col-md-3 col-5 text-right font-weight-bold">
                    <label class="col-form-label" for="departmentId">Manager Phone Number:</label>
                </div>
                <div class="col-md-4 col-7">
                    <input class="form-control" type="number" name="managerPhNumber" min="1000000000" max="9999999999" required/>
                </div>
            </div>
        {{/if}}

        <div class="form-group row justify-content-center">
            <div class="col-md-3 col-5 text-right font-weight-bold">
                <label class="col-form-label" for="jobTitle">Job Title:</label>
            </div>
            <div class="col-md-4 col-7">
                <input class="form-control" type="text" name="jobTitle" {{#if showAddCEO}}value="CEO" readonly{{/if}} required/>
            </div>
        </div>

        <div class="form-group row justify-content-center">
            <div class="col-md-3 col-5 text-right font-weight-bold">
                <label class="col-form-label" for="jobRole">Job Role:</label>
            </div>
            <div class="col-md-4 col-7">
                <textarea class="form-control" name="jobRole" rows="5" required></textarea>
            </div>
        </div>

        {{> login_register_common }}
    </div>
</form>