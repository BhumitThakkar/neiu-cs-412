<div class="container-fluid mt-2">
    <div class="row justify-content-center">
        <h2>Employee Signup</h2>
    </div>
</div>

<div class="container-fluid m-2">
    {{> flash_messages }}
</div>

<form method="post" action="/employees/register">
    <div class="container-fluid">
        <input type="hidden" name="saveMethod" value="{{#if isCreate }}create{{ else }}update{{/if}}">

        <div class="form-group row justify-content-center">
            <div class="col-md-3 col-5 text-right font-weight-bold">
                <label class="col-form-label" for="first">First Name:</label>
            </div>
            <div class="col-md-4 col-7">
                <input class="form-control" type="text" name="first" required/>
            </div>
        </div>

        <div class="form-group row justify-content-center">
            <div class="col-md-3 col-5 text-right font-weight-bold">
                <label class="col-form-label" for="last">Last Name:</label>
            </div>
            <div class="col-md-4 col-7">
                <input class="form-control" type="text" name="last" required/>
            </div>
        </div>

        <div class="form-group row justify-content-center">
            <div class="col-md-3 col-5 text-right font-weight-bold">
                <label class="col-form-label" for="phNumber">Personal Phone Number:</label>
            </div>
            <div class="col-md-4 col-7">
                <input class="form-control" type="number" name="phNumber" min="1000000000" max="9999999999" required/>
            </div>
        </div>

        <div class="form-group row justify-content-center">
            <div class="col-md-3 col-5 text-right font-weight-bold">
                <label class="col-form-label" for="jobTitle">Job Title:</label>
            </div>
            <div class="col-md-4 col-7">
                <input class="form-control" type="text" name="jobTitle" required/>
            </div>
        </div>

        <div class="form-group row justify-content-center">
            <div class="col-md-3 col-5 text-right font-weight-bold">
                <label class="col-form-label" for="jobRole">Job Role:</label>
            </div>
            <div class="col-md-4 col-7">
                <textarea class="form-control" name="jobRole" rows="5" required></textarea>
            </div>
        </div>

        {{> login_register_common }}
    </div>
</form>