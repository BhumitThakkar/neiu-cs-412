<div class="container-fluid mt-2">
    {{#if showWelcome}}
        {{> welcome }}
    {{else}}
        <div class="row justify-content-center">
            <h2>Profile</h2>
        </div>
    {{/if}}
</div>

<div class="container-fluid m-2">
    {{> flash_messages }}
</div>

<div class="container-fluid">

    <div class="form-group row justify-content-center">
        <div class="col-md-3 col-5 text-right font-weight-bold">
            <label class="col-form-label" for="first">First Name:</label>
        </div>
        <div class="col-md-4 col-7">
            <label class="col-form-label" for="first">{{employee.name.first}}</label>
        </div>
    </div>

    <div class="form-group row justify-content-center">
        <div class="col-md-3 col-5 text-right font-weight-bold">
            <label class="col-form-label" for="last">Last Name:</label>
        </div>
        <div class="col-md-4 col-7">
            <label class="col-form-label" for="last">{{employee.name.last}}</label>
        </div>
    </div>

    <div class="form-group row justify-content-center">
        <div class="col-md-3 col-5 text-right font-weight-bold">
            <label class="col-form-label" for="phNumber">Personal Phone Number:</label>
        </div>
        <div class="col-md-4 col-7">
            <label class="col-form-label" for="phNumber">{{employee.phNumber}}</label>
        </div>
    </div>

    <div class="form-group row justify-content-center">
        <div class="col-md-3 col-5 text-right font-weight-bold">
            <label class="col-form-label" for="departmentId">Department:</label>
        </div>
        <div class="col-md-4 col-7">
            <label class="col-form-label" for="departmentId">{{departmentName}}</label>
        </div>
    </div>

    <div class="form-group row justify-content-center">
        <div class="col-md-3 col-5 text-right font-weight-bold">
            <label class="col-form-label" for="managerName">Manager:</label>
        </div>
        <div class="col-md-4 col-7">
            <label class="col-form-label" for="managerName">{{managerName}}</label>
        </div>
    </div>

    <div class="form-group row justify-content-center">
        <div class="col-md-3 col-5 text-right font-weight-bold">
            <label class="col-form-label" for="jobTitle">Job Title:</label>
        </div>
        <div class="col-md-4 col-7">
            <label class="col-form-label" for="jobTitle">{{employee.jobTitle}}</label>
        </div>
    </div>

    <div class="form-group row justify-content-center">
        <div class="col-md-3 col-5 text-right font-weight-bold">
            <label class="col-form-label" for="jobRole">Job Role:</label>
        </div>
        <div class="col-md-4 col-7">
            <label class="col-form-label" for="jobRole">{{{employee.jobRole}}}</label>          <!-- because jobRole has <br/> tag -->
        </div>
    </div>

    <div class="form-group row justify-content-center">
        <div class="col-md-3 col-5 text-right font-weight-bold">
            <label class="col-form-label" for="email">Email:</label>
        </div>
        <div class="col-md-4 col-7">
            <label class="col-form-label" for="email">{{employee.email}}</label>
        </div>
    </div>

    <div class="row justify-content-center">
        {{#if canAddEmployee}}
            <a class="col-6 col-md-2"><span onclick="setData('{{employee.id}}')" class="btn btn-light">Delete Profile</span></a>
            <a class="col-6 col-md-2" href="/employees/edit?objId={{ employee.id }}"><span class="btn btn-light">Edit Profile</span></a>
        {{/if}}
    </div>
    <hr/>

</div>

<script>
    function setData(objId){
        if (confirm("Are you sure you want to delete?\n\n---Please Note---\n If you are the only employee in HR and you delete yourself, whole system will be deleted.")) {
                window.location.href = "/employees/destroy?objId="+objId
        }
    }
</script>