<div class="container-fluid mt-2">
    <div class="row justify-content-center">
        <h2>Change Password</h2>
    </div>
</div>

<div class="container-fluid mt-2 mb-2">
    {{> flash_messages }}
</div>

<form method="post" action="/employees/changePassword">

    <div class="container-fluid">
        <div class="form-group row justify-content-center">
            <div class="col-md-3 col-5 text-right font-weight-bold">
                <label class="col-form-label" for="oldPassword">Old Password:</label>
            </div>
            <div class="col-md-4 col-7">
                <input class="form-control" type="password" name="oldPassword" required/>
            </div>
        </div>

        <div class="form-group row justify-content-center">
            <div class="col-md-3 col-5 text-right font-weight-bold">
                <label class="col-form-label" for="newPassword">New Password:</label>
            </div>
            <div class="col-md-4 col-7">
                <input class="form-control" type="password" name="newPassword" required/>
            </div>
        </div>

        <div class="form-group row justify-content-center">
            <input class="col-3 col-md-2 btn btn-light" type="submit" value="Submit">
        </div>
    </div>

</form>