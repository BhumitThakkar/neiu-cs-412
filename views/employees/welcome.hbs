<div class="container-fluid mt-2">
    <h1 class="text-center">Welcome to <span style="color: tomato">{{appName}}</span> Web-Application</h1>
    <hr/>
</div>

<div class="container-fluid mt-2 mb-2">
    {{> flash_messages }}
</div>

<div class="container-fluid">
    {{#if employeeList}}
        <div class="row row-cols-8 justify-content-center">
            <div class="col-12 col-md-5 btn-group-vertical" role="group">
                {{#if canAddEmployee}}
                    {{#each employeeList}}
                        <span id="insertHere" class="mt-3 btn btn-lg btn-block btn-outline-dark">
                            {{ name }}
                            <i class="ml-2 float-right text-danger" onclick="setData('{{employeeId}}')" data-feather="trash"></i>
                            <a href="/employees/edit?objId={{ employeeId }}"><i class="ml-2 float-right text-info" data-feather="edit"></i></a>
                            <a href="/employees/view?objId={{ employeeId }}"><i class="ml-2 float-right text-secondary" data-feather="eye"></i></a>
                        </span>
                    {{/each}}
                {{else}}
                    {{#each employeeList}}
                        <span id="insertHere" class="mt-3 btn btn-lg btn-block btn-outline-dark">
                            {{ name }}
                            <a href="/employees/view?objId={{ employeeId }}"><i class="ml-2 float-right text-secondary" data-feather="eye"></i></a>
                        </span>
                    {{/each}}
                {{/if}}
            </div>
        </div>
    {{else}}
        <h3 class="text-danger text-center">No Employees to List</h3>
    {{/if}}
</div>