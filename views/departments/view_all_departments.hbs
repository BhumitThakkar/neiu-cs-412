<div class="container-fluid mt-2">
    <div class="row justify-content-center">
        <h2>All Departments</h2>
    </div>
</div>

<div class="container-fluid m-2">
    {{> flash_messages }}
</div>

<div class="container-fluid">
    {{#if departmentList}}
    <div class="row row-cols-8 justify-content-center">
        <div class="col-12 col-md-5 btn-group-vertical" role="group">
        {{#each departmentList}}
            <span class="mt-3 btn btn-lg btn-block btn-outline-dark">
                {{ name }}
                <i class="ml-2 float-right text-danger" onclick="setData('{{objId}}')" data-feather="trash"></i>
                <a href="/departments/edit?objId={{ objId }}"><i class="ml-2 float-right text-info" data-feather="edit"></i></a>
                <a href="/departments/view?objId={{ objId }}"><i class="ml-2 float-right text-secondary" data-feather="eye"></i></a>
            </span>
        {{/each}}
        {{else}}
            <h3 class="text-danger text-center">No Departments to List</h3>
        </div>
    </div>
    {{/if}}
</div>

<script>
    function setData(objId){
        if (confirm("Are you sure you want to delete?")) {
            window.location.href = "/departments/destroy?objId="+objId
        }
    }
</script>